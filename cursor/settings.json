{
  // =====================================
  // GENERAL/WORKSPACE
  // =====================================
  "workbench.colorTheme": "Atom One Dark",
  "workbench.iconTheme": "vscode-icons",
  "files.autoSave": "afterDelay",
  // "window.openFoldersInNewWindow": "on",

  // =====================================
  // EDITOR
  // =====================================
  "editor.lineNumbers": "on",
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.mouseWheelZoom": true,
  "editor.folding": true,
  "editor.foldingStrategy": "auto",
  "editor.renderWhitespace": "boundary",
  "editor.minimap.enabled": false,
  "editor.wordWrap": "off",
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.fontFamily": "Native, Hack, Source Pro, Menlo, Monaco, 'Courier New', monospace",
  "editor.colorDecorators": true,
  "editor.defaultColorDecorators": "always",

  // =====================================
  // VIM
  // =====================================
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "~/.vimrc",
  "vim.leader": "<space>",
  "vim.useCtrlKeys": true,
  "vim.useSystemClipboard": false,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["∆"], "after": ["5", "j"] },
    { "before": ["˚"], "after": ["5", "k"] },
    { "before": ["Ô"], "after": ["1", "5", "j"] },
    { "before": [""], "after": ["1", "5", "k"] },
    { "before": ["<C-j>"], "commands": ["workbench.action.navigateDown"] },
    { "before": ["<C-k>"], "commands": ["workbench.action.navigateUp"] },
    { "before": ["<C-h>"], "commands": ["workbench.action.navigateLeft"] },
    { "before": ["<C-l>"], "commands": ["workbench.action.navigateRight"] },
    {
      "before": ["<leader>", "h"],
      "commands": ["editor.action.toggleHighlight"]
    },
    {
      "before": ["<leader>", "p"],
      "commands": ["editor.action.clipboardPasteAction"]
    },
    {
      "before": ["<leader>", "y"],
      "commands": ["editor.action.clipboardCopyAction"]
    },
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "x"],
      "commands": ["workbench.action.files.save", "workbench.action.closeActiveEditor"]
    }
  ],

  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["∆"], "after": ["5", "j"] },
    { "before": ["˚"], "after": ["5", "k"] },
    { "before": ["Ô"], "after": ["1", "5", "j"] },
    { "before": [""], "after": ["1", "5", "k"] },
    {
      "before": ["<leader>", "y"],
      "commands": ["editor.action.clipboardCopyAction"]
    },
    {
      "before": ["<leader>", "d"],
      "commands": ["editor.action.clipboardCutAction"]
    },
    {
      "before": ["<leader>", "p"],
      "commands": ["editor.action.clipboardPasteAction"]
    },
    {
      "before": ["<C-r>"],
      "after": [":", "r", "e", "d", "o", "<CR>"]
    }
  ],

  "vim.handleKeys": {
    "<D-A-j>": true,
    "<D-A-k>": true,
    "∆": true,
    "˚": true,
    "Ô": true,
    "": true,
    "<C-d>": false,
    "<C-u>": false,
    "<C-f>": false,
    "<C-b>": false,
    "<C-r>": true
  },

  // =====================================
  // LANGUAGES
  // =====================================
  "[dockercompose]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // =====================================
  // PLUGINS
  // =====================================
  "prettier": {
    "printWidth": 150,
    "bracketSameLine": true,
    "singleAttributePerLine": true,
    "experimentalTernaries": true
  },

  "problems": {
    "showCurrentInStatus": true
  },

  "vsicons": {
    "dontShowNewVersionMessage": true
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
