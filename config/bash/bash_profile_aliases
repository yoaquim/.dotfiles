# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ III.                            Aliases                                     │
# └─────────────────────────────────────────────────────────────────────────────┘

alias c="clear"
alias cl="clear"

# Clipboard copy and paste
alias pbc="pbcopy"
alias pbp="pbpaste"

# Vim aliases
alias v="vim"
alias nv="nvim"

# Alias remove dir ('rmdir') to 'rmd'
alias rmd="rm -rf"

# Show hidden files, long listing format
alias la="ls -la"

# Long listing format
alias l="ls -l"
alias ll="ls -l"

# Human readable, long listing format
alias lh="ls -lh"

# Human readable, show hidden files, long listing format
alias lah="ls -lah"
alias lha="ls -lah"

# More ls aliases
alias l1="ls -lh1"
alias la1="ls -lah1"

# Go to previous dir
alias ...="cd -"

# Go to parent dir
alias ..="cd .."

# Go to vim directory
alias cdv="cd ~/.vim"

# Go to dotfiles directory
alias cd.="cd ~/.dotfiles"

# Go to Desktop
alias cdd="cd ~/Desktop/"

# Change Directory to Dropbox directory
alias cdb="cd ~/Dropbox/"

# Change Directory to Projects directory
alias cdp="cd ~/Projects/"

# Change Directory to Scratches directory
alias cds="cd ~/Scratches/"

# Copy Current Dir to Clipboard
alias cwd="pwd | pbcopy"

# `touch` alias (create new file)
alias t="touch"

# tmux alias
alias tm="tmux"
alias tml="tmux ls"
alias tma="tmux attach -t"
alias tmk="tmux kill-session -t"

# Edit .bash_profile
alias vb="nvim ~/.bash_profile"
#
# Edit .bashrc_functions
alias vbf="nvim ~/.config/bash/bash_profile_functions"

# Edit .bashrc_tools
alias vbt="nvim ~/.config/bash/bash_profile_tools"

# Edit .bash_git
alias vbg="nvim ~/.config/bash/bash_profile_git"

# Edit .bash_local
alias vbl="nvim ~/.config/bash/bash_profile_local"

# Edit .bash_alias
alias vba="nvim ~/.config/bash/bash_profile_aliases"

# Edit kitty.conf
alias vk="nvim ~/.config/kitty/kitty.conf"
#
# Edit nvim.conf
alias vk="nvim ~/.config/nvim"

# Edit tmux.conf
alias vt="nvim ~/.config/tmux/tmux.conf"

# Edit .gitconfig
alias vg="nvim ~/.gitconfig"

# Edit /etc/hosts
alias vetc="sudo nvim /etc/hosts"

# Coreutils so "sb" alias can work
alias readlink=greadlink

# Source bash file
alias sb="source ~/.bash_profile"

# Flush IP cache
alias flush="sudo dscacheutil -flushcache;sudo killall -HUP mDNSResponder;say cache flushed"

# NPM alias so you can run npm scripts on silent mode
alias npms="npm -s"

# Think this is to emulate pbcopy on Linux?
alias lcp="xclip -sel clip"

# Docker compose alias
alias dcp="docker compose"

