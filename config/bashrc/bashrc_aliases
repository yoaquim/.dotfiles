#=====================================================
# III.  ALIASES
#=====================================================

# Alias for clear
alias c="clear"
alias cl="clear"

# Vim alias
alias v="vim"

# Alias remove dir ('rmdir') to 'rmd'
alias rmd="rm -rf"

# Show hidden files, long listing format
alias la="ls -la"

# Long listing format
alias l="ls -l"
alias ll="ls -l"

# Human readable, long listing format
alias lh="ls -lh"

# Human readable, show hidden files, long listing format
alias lah="ls -lah"
alias lha="ls -lah"

# More ls aliases
alias l1="ls -lh1"
alias la1="ls -lah1"

# Go to previous dir
alias ...="cd -"

# Go to parent dir
alias ..="cd .."

# Go to vim directory
alias cdv="cd ~/.vim"

# Go to dotfiles directory
alias cd.="cd ~/.dotfiles"

# Go to Desktop
alias cdd="cd ~/Desktop/"

# Change Directory to Dropbox directory
alias cdb="cd ~/Dropbox/"

# Change Directory to Projects directory
alias cdp="cd ~/Projects/"

# Change Directory to Scratches directory
alias cds="cd ~/Scratches/"

# Copy Current Dir to Clipboard
alias cwd="pwd | pbcopy"

# `touch` alias (create new file)
alias t="touch"

# tmux alias
alias tm="tmux"
alias tml="tmux ls"
alias tma="tmux attach -t"
alias tmk="tmux kill-session -t"

# Edit .bash_profile
alias vb="vim ~/.bash_profile"
#
# Edit .bashrc_functions
alias vbf="vim ~/.config/bashrc/bashrc_functions"

# Edit .bashrc_tools
alias vbt="vim ~/.config/bashrc/bashrc_tools"

# Edit .bash_git
alias vbg="vim ~/.config/bashrc/bashrc_git"

# Edit .bash_local
alias vbl="vim ~/.config/bashrc/bashrc_local"

# Edit .bash_alias
alias vba="vim ~/.config/bashrc/bashrc_aliases"

# Edit .vimrc
alias vrc="vim ~/.vimrc"

# Edit .tmux.conf
alias vt="vim ~/.config/tmux/tmux.conf"

# Edit .gitconfig
alias vg="vim ~/.gitconfig"

# Edit /etc/hosts
alias vetc="sudo vim /etc/hosts"

# Coreutils so "sb" alias can work
alias readlink=greadlink

# Source bash file
alias sb="source ~/.bash_profile"

# Flush IP cache
alias flush="sudo dscacheutil -flushcache;sudo killall -HUP mDNSResponder;say cache flushed"

# NPM alias so you can run npm scripts on silent mode
alias npms="npm -s"

# Think this is to emulate pbcopy on Linux?
alias lcp="xclip -sel clip"

# Docker compose alias
alias dcp="docker compose"

#--------------------------
# DOCKER
#--------------------------

# Docker compose alias
alias dkc="docker-compose"

# Delete all docker images
dri="docker rmi \$(docker images -q)"
alias dkrmi_all='eval ${dri}'

# Bash into a docker image 
alias drun="docker run -it --entrypoint /bin/bash"

# Push docker image
alias dpush="docker push"

