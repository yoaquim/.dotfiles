#!/usr/bin/env bash

#=======================
# PRINTING FN
#=======================

arrowPrint() {
    local VAL=${1}
    local BACKGROUND_COLOR=${2}
    local TEXT_COLOR

    # Set text color
    if [ -z ${3+x} ]; then 
        TEXT_COLOR="#ffffff";
    else 
        TEXT_COLOR=${3};
    fi
            

    echo "<span foreground='${BACKGROUND_COLOR}'></span><span foreground='${TEXT_COLOR}' background='${BACKGROUND_COLOR}'>  UTC ${VAL}</span>"
}

#=======================
# BLOCKLET
#=======================
TIME_FORMAT="%I:%M %p"
TIME=$(TZ="UTC" date "+${TIME_FORMAT}")

# Print
#--------------------------------------
BACKGROUND_COLOR='#404040'
TEXT_COLOR='#f1f1f1'

arrowPrint "${TIME}" "${BACKGROUND_COLOR}" "${TEXT_COLOR}"
arrowPrint "${TIME}" "${BACKGROUND_COLOR}" "${TEXT_COLOR}"

